{
  "$schema": "https://biomejs.dev/schemas/1.7.0/schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "useJsxKeyInIterable": "off" // Don't require keys in hono-x
      }
    }
  },
  "formatter": {
    "indentStyle": "space"
  },
  "files": {
    "ignore": ["node_modules"]
  }
}
